  <select id="selectLatestTeamNumber" resultMap="BaseResultMap" >
    SELECT
        CASE WHEN aa.count >= aa.full_number THEN CONCAT(aa.`name`, '-', (aa.serial + 1))
        ELSE CONCAT(aa.`name`, '-', aa.serial) END AS name, aa.`name` AS serial_name,
        aa.team_id AS id, aa.full_number
    FROM (
        SELECT
            COUNT(a.id) AS count,
            IFNULL(a.serial, 1) AS serial, b.id AS team_id, b.`name`, b.full_number
        FROM bs_activity_team b LEFT JOIN bs_activity_join_team a ON a.team_id = b.id
        WHERE b.activity_id = 23
        GROUP BY b.id, a.serial
        ORDER BY a.serial DESC
    ) AS aa
    GROUP BY aa.team_id
    ORDER BY serial_name ASC
