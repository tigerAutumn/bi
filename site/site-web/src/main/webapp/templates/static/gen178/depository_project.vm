<script>

    function clickRegister(){
        $.ajax({
            url: $('#APP_ROOT_PATH_GEN').val() + '/gen178/user/regist/registInit',
            type: 'post',
            dataType: 'json',
            data: {
            },
            success: function (data) {
                if(data.userId){
                    drawToast("您已经登录币港湾！");
                }else {
                    location.href = $("#APP_ROOT_PATH_GEN").val() + "/gen178/user/register_first_new_index";
                }
            }
        });
    }

    function clickLogin() {
        $.ajax({
            url: $('#APP_ROOT_PATH_GEN').val() + '/gen178/user/regist/registInit',
            type: 'post',
            dataType: 'json',
            data: {
            },
            success: function (data) {
                if(data.userId){
                    location.href = $("#APP_ROOT_PATH_GEN").val() + "/gen178/assets/assets";
                }else {
                    location.href = $("#APP_ROOT_PATH_GEN").val() + "/gen178/user/login/index";
                }
            }
        });
    }

</script>

