<form id="pagerForm" method="post" action="#rel#">
    <input type="hidden" name="pageNum" value="$!pageNum" />
    <input type="hidden" name="numPerPage" value="$!numPerPage" />
    <input type="hidden" name="orderField" value="$!{orderField}" />
    <input type="hidden" name="orderDirection" value="$!{orderDirection}" />
</form>
<div class="pageHeader">
    <form id="myform" rel="pagerForm" method="post" action="$env.getWebURL('/financial/withdraw2HFBankOrderIndex.htm')" onsubmit="return navTabSearch(this);">
        <input type="hidden" id="APP_ROOT_PATH" value="$!env.getWebURL('')"/>
        <input type="hidden" name="pageNum" value="$!pageNum" />
        <input type="hidden" name="numPerPage" value="$!numPerPage" />
        <div class="searchBar">
            <table class="searchContent">
                <tr>
                    <td>
                        <button onclick="func()" type="button" style="background-color:#666666; display:none;"></button>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</div>
<div class="pageContent">
    <div class="panelBar">
        <ul class="toolBar">
            <li><a class="add" href="$env.getWebURL('/financial/withdraw2HFBankdetail.htm')" target="dialog" mask="true" rel="createBack" height="300" width="580"><span>平台提现</span></a></li>
            <li class="line">line</li>
        </ul>
    </div>
    <table class="table" width="1396" layoutH="118">
        <thead>
        <tr>
            <th width="13.5%">订单号</th>
            <th width="13.5%">创建时间</th>
            <th width="13.5%">交易时间</th>
            <th width="13.5%">交易金额</th>
            <th width="13.5%">交易类型</th>
            <th width="13.5%">备注信息</th>
            <th width="13.5%">订单状态</th>
            <th width="5.5%">操作人</th>
        </tr>
        </thead>
        <tbody>
            #foreach($grid in $withdrawOrderList)
            <tr target="sid_user" rel="1" >
                <td>$!grid.orderNo</td>
                <td> $!date.format($!grid.createTime)</td>
                <td> $!date.format($!grid.updateTime)</td>

                <td>$!money.format($!grid.amount)</td>
                <td>
                    #if($!grid.transType == "HFBANK_SYS_WITHDRAW")
                        提现
                    #end
                </td>
                <td>
                    #if($!grid.note == "null")
                    #else
                        $!grid.note
                    #end
                </td>
                <td>
                    #if($!grid.status == "5")
                        处理中
                    #elseif($!grid.status == "6")
                        成功
                    #elseif($!grid.status == "7")
                        失败
                    #end
                </td>
                <td>$!grid.userName</td>
            </tr>
            #end
        </tbody>

    </table>
    <div class="panelBar">
        <div class="pages">
            <span>显示</span>
            <select class="combox" name="numPerPage" onchange="navTabPageBreak({pageNum:1,numPerPage:this.value})">
                <option #if("$!numPerPage" == "20") selected #end value="20">20</option>
                <option #if("$!numPerPage" == "50") selected #end value="50">50</option>
                <option #if("$!numPerPage" == "100") selected #end value="100">100</option>
                <option #if("$!numPerPage" == "200") selected #end value="200">200</option>
            </select>
            <span>条，共$!totalRows条</span>
        </div>

        <div class="pagination" targetType="navTab" totalCount="$!totalRows" numPerPage="$!numPerPage" currentPage="$!pageNum"></div>

    </div>
</div>

<script>
    function func(){
        var url = $("#APP_ROOT_PATH").val() + "/financial/withdraw2HFBankOrderIndex.htm";
        $("#myform").attr("action",url);
        $("#myform").attr("onsubmit","return navTabSearch(this);");
        $("#myform").submit();
    }
</script>