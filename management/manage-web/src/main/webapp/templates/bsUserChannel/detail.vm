<div class="pageContent">
	#Hidden("APP_ROOT_PATH",$env.getWebURL(''))
	<input type="hidden" name="user_channel_id" id="user_channel_id" value="$!bsUserChannel.id"/>
	<form id="financeForm" method="post" action="$env.getWebURL('/bsUserChannel/save.htm')" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone)">
		#Hidden("id", "$!bsUserChannel.id")
		<div class="pageFormContent nowrap" layoutH="97">
			<dl>
				<dt >
					用户名：
                </dt>
				<dd >
					<input type="hidden" name="userId" value="$!bsUserChannel.userId" />
					<input type="text" id="userName" name="userName" class="required" maxlength="30" readonly="true" value="$!bsUserChannel.userName" />
					<div class="buttonActive"><div class="buttonContent"><button onclick="clickme(this)" user_channel_id="$!bsUserChannel.id" type="button" >#if($!bsUserChannel.userName && ''!= $!bsUserChannel.userName) 更改用户 #else 添加用户 #end</button></div></div>
                </dd>
			</dl>
			<dl>
				<dt >
					银行名称-渠道-通道类型：
                </dt>
				<dd >
					<select name="bankChannelId" >
						#foreach($payCard in $!payCards)
						<option value="$!payCard.payId" #if($!bsUserChannel.bankChannelId == $!payCard.payId ) selected  #end>$!payCard.name - $message.get("BSUSERCHANNEL_CHANNEL_$!payCard.channel") - $!payCard.channelPriority </option>
						#end
    				</select>
                </dd>
			</dl>
		</div>
		<div class="formBar">
			<ul>
                <li ><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
				<li>
					<div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
				</li>
			</ul>
		</div>
	</form>
	
</div>
<script>
	function navTabAjaxDone(json) {
		if (json.statusCode == "301") {
			alertMsg.warn('用户该类型优先支付渠道已存在!');
		} else if (json.statusCode == "200") {
			alertMsg.correct('操作成功!');
			$.pdialog.closeCurrent();
			navTab.reload("$env.getWebURL('/bsUserChannel/index.htm')");
		} else {
			alertMsg.error('操作失败!');
		}
		$.pdialog.closeCurrent();
	}
	
	function clickme(obj){
		$.pdialog.closeCurrent();
		// var user_channel_id = $('#user_channel_id').val();
		var user_channel_id = $(obj).attr('user_channel_id');
		navTab.reload("$env.getWebURL('/bsuser/change.htm')?id="+user_channel_id);
	}
</script>